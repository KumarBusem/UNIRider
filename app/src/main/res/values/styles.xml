<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="SpUsage">

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryGreenDark</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryGreenDark</item>
        <item name="colorOnSecondary">@color/colorPrimaryGreenDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontPath">fonts/WorkSans-Regular.ttf</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NavigationMenuTest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NavigationMenuTest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--BOLD FONTS-->

    <style name="Text.B1" parent="AppTheme">
        <item name="fontPath">fonts/WorkSans-Bold.ttf</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/colorGrey500</item>
    </style>

    <style name="Text.B2" parent="Text.B1">
        <item name="android:textSize">26dp</item>
    </style>

    <style name="Text.B3" parent="Text.B1">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Text.B4" parent="Text.B1">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Text.B14" parent="Text.B1">
        <item name="android:textSize">14dp</item>
    </style>

    <!--TABLET FONTS-->


    <!--REGULAR FONTS-->

    <style name="Text.R1" parent="AppTheme">
        <item name="fontPath">fonts/WorkSans-Regular.ttf</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/colorGrey500</item>
    </style>

    <style name="Text.R3" parent="Text.R1">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Text.R2" parent="Text.R1">
        <item name="android:textSize">26dp</item>
    </style>

    <style name="Text.R4" parent="Text.R1">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Text.R13" parent="Text.R1">
        <item name="android:textSize">13dp</item>
    </style>

    <!--TABLET FONTS-->


    <!--LIGHT FONTS-->

    <!--TABLET FONTS-->


    <style name="DialogSideInOutAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/exit_to_bottom</item>
    </style>


</resources>
