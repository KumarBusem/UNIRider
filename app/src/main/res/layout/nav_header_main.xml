<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ECF6EF"
    android:gravity="bottom"
    android:id="@+id/cvNavHeader"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical"
    android:paddingVertical="30sp"
    android:paddingHorizontal="15sp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:adjustViewBounds="true"
        android:id="@+id/ivUNI"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/nav_header_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/uni_trans" />
    
    <TextView
        android:layout_width="match_parent"
        android:text="Kumar busem"
        android:id="@+id/tvNavHeaderName"
        style="@style/Text.B3"
        android:textSize="17sp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/colorGrey700"
        app:layout_constraintTop_toBottomOf="@id/ivUNI"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="ididid"
        android:id="@+id/tvNavHeaderId"
        style="@style/Text.B3"
        android:gravity="center"
        android:textSize="15sp"
        android:maxLines="1"
        android:textColor="@color/colorGrey700"
        app:layout_constraintTop_toBottomOf="@id/tvNavHeaderName"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>