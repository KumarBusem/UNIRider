<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.home.HomeFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.uni.rider.features.home.HomeViewModel" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srlRunsheets"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ECF6EF"
            tools:ignore="UnusedAttribute">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvProfileDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="23dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:foreground="?selectableItemBackground"
                    android:orientation="horizontal"
                    android:padding="8sp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcvProfilePic"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:foreground="?selectableItemBackground"
                        app:cardCornerRadius="25sp"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeColor="@color/milky_white"
                        app:strokeWidth="2dp">

                        <ImageView
                            android:id="@+id/ivProfilePic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/default_profile"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/default_profile" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvName"
                        style="@style/Text.B3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:maxLines="1"
                        android:text='@{viewModel.obsUser.name ?? @string/n_a}'
                        android:textColor="#2E363C"
                        android:textSize="17sp"
                        app:layout_constraintBottom_toTopOf="@id/tvRole"
                        app:layout_constraintEnd_toStartOf="@id/ivProfileArrow"
                        app:layout_constraintStart_toEndOf="@id/mcvProfilePic"
                        app:layout_constraintTop_toTopOf="@id/mcvProfilePic"
                        app:layout_constraintVertical_chainStyle="packed"
                        tools:text="Casey Neistat fdfd ssss   ff f f ee eeeee" />

                    <TextView
                        android:id="@+id/tvRole"
                        style="@style/Text.R3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:gravity="center"
                        android:text='@{viewModel.obsUser.sf_id ?? @string/n_a}'
                        android:textColor="@color/colorAccent"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvName"
                        app:layout_constraintTop_toBottomOf="@+id/tvName"
                        app:layout_constraintVertical_chainStyle="packed"
                        tools:text="SFSFR000007" />

                    <ImageView
                        android:id="@+id/ivProfileArrow"
                        android:layout_width="26sp"
                        android:layout_height="26sp"
                        android:layout_marginEnd="8sp"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/colorGrey700" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="14dp"
                android:foreground="?selectableItemBackground"
                app:cardCornerRadius="10sp"
                app:cardElevation="23dp"
                app:layout_constraintTop_toBottomOf="@id/cvProfileDetails">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:foreground="?selectableItemBackground"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cvDateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?selectableItemBackground"
                        android:padding="16dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <ProgressBar
                            android:id="@+id/progress_bar_pickup"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_marginEnd="10sp"
                            android:visibility='@{viewModel.obsIsDataLoading.booleanValue() == true ? View.VISIBLE : View.GONE}'
                            app:layout_constraintBottom_toBottomOf="@id/ivCalendar"
                            app:layout_constraintEnd_toStartOf="@id/ivTopArrow"
                            app:layout_constraintTop_toTopOf="@id/ivCalendar" />

                        <ImageView
                            android:id="@+id/ivTopArrow"
                            android:layout_width="26sp"
                            android:layout_height="26sp"
                            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                            app:layout_constraintBottom_toBottomOf="@id/ivCalendar"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/ivCalendar"
                            app:tint="@color/colorGrey500" />

                        <ImageView
                            android:id="@+id/ivCalendar"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/ic_baseline_date_range_24"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/colorPrimaryGreenDark" />

                        <TextView
                            android:id="@+id/tvDate"
                            style="@style/Text.B2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="14dp"
                            android:text="May 2022"
                            android:textColor="#2E363C"
                            android:textSize="21sp"
                            app:layout_constraintBottom_toBottomOf="@id/ivCalendar"
                            app:layout_constraintStart_toEndOf="@id/ivCalendar"
                            app:layout_constraintTop_toTopOf="@id/ivCalendar" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <LinearLayout
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="2sp"
                        android:layout_marginHorizontal="12dp"
                        android:background="#ECF6EF"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/cvDateLayout" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cvOfd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingVertical="18sp"
                        app:layout_constraintEnd_toStartOf="@id/cvDelivered"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/line1">

                        <ImageView
                            android:id="@+id/ivOFD"
                            android:layout_width="36sp"
                            android:layout_height="36sp"
                            android:alpha="0.65"
                            android:src="@drawable/icon_ofd_package"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvOFD"
                            style="@style/Text.R3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:maxLines="1"
                            android:text="Total OFD"
                            android:textColor="@color/colorGrey700"
                            android:textSize="13sp"
                            app:layout_constraintBottom_toTopOf="@id/tvOFDValue"
                            app:layout_constraintStart_toEndOf="@id/ivOFD"
                            app:layout_constraintTop_toTopOf="@id/ivOFD" />

                        <TextView
                            android:id="@+id/tvOFDValue"
                            style="@style/Text.R3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:maxLines="1"
                            android:textColor="@color/colorGrey700"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="@id/ivOFD"
                            app:layout_constraintStart_toEndOf="@id/ivOFD"
                            app:layout_constraintTop_toBottomOf="@id/tvOFD"
                            tools:text="276" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cvDelivered"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingVertical="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/cvOfd"
                        app:layout_constraintTop_toBottomOf="@id/line1">

                        <ImageView
                            android:id="@+id/ivDelivered"
                            android:layout_width="36sp"
                            android:layout_height="36sp"
                            android:alpha="0.65"
                            android:src="@drawable/icon_delivered_package"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvDelivered"
                            style="@style/Text.R3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:maxLines="1"
                            android:text="Total Delivered"
                            android:textColor="@color/colorGrey700"
                            android:textSize="13sp"
                            app:layout_constraintBottom_toTopOf="@id/tvDeliveredValue"
                            app:layout_constraintStart_toEndOf="@id/ivDelivered"
                            app:layout_constraintTop_toTopOf="@id/ivDelivered" />

                        <TextView
                            android:id="@+id/tvDeliveredValue"
                            style="@style/Text.R3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:maxLines="1"
                            android:textColor="@color/colorGrey700"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="@id/ivDelivered"
                            app:layout_constraintStart_toEndOf="@id/ivDelivered"
                            app:layout_constraintTop_toBottomOf="@id/tvDelivered"
                            tools:text="253" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cv_conversion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@color/white"
                        android:foreground="?selectableItemBackground"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/btnRunsheets">

                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:id="@+id/pb_conversion"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:elevation="0dp"
                            app:cardElevation="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:rcBackgroundColor="#D5ECDD"
                            app:rcBackgroundPadding="4sp"
                            app:rcMax="100.0"
                            app:rcProgress="65.0"
                            app:rcProgressColor="#71D8C4"
                            app:rcRadius="10dp" />

                        <TextView
                            style="@style/Text.B4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Conversion"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvConversion"
                            style="@style/Text.R3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:text="65%"
                            android:textColor="@color/colorGrey700"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/btnRunsheets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:foreground="?selectableItemBackground"
                        android:orientation="horizontal"
                        android:padding="16sp"
                        app:layout_constraintTop_toBottomOf="@id/cvDelivered">

                        <ImageView
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/colorGrey500" />

                        <ImageView
                            android:id="@+id/ivRunsheets"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icon_service"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/colorPrimaryGreenDark" />

                        <TextView
                            android:id="@+id/tvRunsheetsForSelectedMonth"
                            style="@style/Text.R2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="14dp"
                            android:text="Selected month runsheets"
                            android:textColor="@color/colorGrey700"
                            android:textSize="17sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/ivRunsheets"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tvNoData"
                        style="@style/Text.R3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20sp"
                        android:text="@string/no_data_message"
                        android:textAlignment="center"
                        android:textColor="@color/colorRed"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/line1" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/btnAddRunsheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="14sp"
                android:layout_marginBottom="14dp"
                android:foreground="?selectableItemBackground"
                app:cardCornerRadius="10sp"
                app:cardElevation="23dp"
                app:layout_constraintTop_toBottomOf="@id/cardDateLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:foreground="?selectableItemBackground"
                    android:orientation="horizontal"
                    android:padding="16sp">

                    <ImageView
                        android:id="@+id/ivAddRunsheet"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_service"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/colorPrimaryGreenDark" />

                    <ImageView
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/colorGrey500" />

                    <TextView
                        style="@style/Text.R2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="14dp"
                        android:text="Add Runsheet"
                        android:textColor="@color/colorGrey700"
                        android:textSize="17sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivAddRunsheet"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>